{
  "manifest_version": 3,
  "name": "Pro HTML Auditor",
  "version": "1.0.0",
  "description": "Professional tool to audit HTML for accessibility and WCAG compliance.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Run HTML Audit"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
